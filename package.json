{
	"name": "novella",
	"displayName": "Novella",
	"description": "A VS Code React component previewer",
	"icon": "assets/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/nobrayner/novella"
	},
	"version": "0.3.0",
	"license": "GNU GPLv3",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:novella.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "novella.preview",
				"category": "Novella",
				"title": "Start Preview",
				"icon": {
					"light": "assets/eye-dark.svg",
					"dark": "assets/eye-light.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "novella.preview",
					"when": "editorLangId == typescriptreact",
					"group": "navigation"
				},
				{
					"command": "novella.preview",
					"when": "editorLangId == javascriptreact",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"@rollup/plugin-alias": "^3.1.2",
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-image": "^2.0.6",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@rollup/plugin-replace": "^2.4.1",
		"@rollup/plugin-sucrase": "^3.1.0",
		"postcss": "^8.2.7",
		"rollup": "^2.40.0",
		"rollup-plugin-postcss": "^4.0.0",
		"sass": "^1.32.8"
	}
}