{
	"name": "novella",
	"displayName": "Novella",
	"description": "A VS Code React component previewer",
	"icon": "assets/logo.png",
	"publisher": "nobrayner",
	"repository": {
		"type": "git",
		"url": "https://github.com/nobrayner/novella"
	},
	"version": "0.6.3",
	"license": "GNU GPLv3",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:novella.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "novella.preview",
				"category": "Novella",
				"title": "Start Preview",
				"icon": {
					"light": "assets/eye-dark.svg",
					"dark": "assets/eye-light.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "novella.preview",
					"when": "editorLangId == typescriptreact",
					"group": "navigation"
				},
				{
					"command": "novella.preview",
					"when": "editorLangId == javascriptreact",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"package": "vsce package",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"@fal-works/esbuild-plugin-global-externals": "^2.1.1",
		"esbuild": "~0.11.2"
	}
}